@model Bangazon.Models.OrderViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Details";
}
    <div>
        <h1>Details</h1>


        <h4>Order</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Order.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderProduct.Product.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderProduct.Product.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderProduct.Product.Quantity)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LineItems)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Quantity)
                        </td>
                        <td>
                            @*/*<a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>*/*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>